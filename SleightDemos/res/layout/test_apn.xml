<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget0"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
>
	<TextView
		android:id="@+id/now_apn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="当前apn："
		android:layout_x="48px"
		android:layout_y="59px"
	>
	</TextView>
	<TextView
		android:id="@+id/apnValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:layout_x="150px"
		android:layout_y="58px"
	>
	</TextView>
	<TextView
		android:id="@+id/netState"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="网络连接状态："
		android:layout_x="30px"
		android:layout_y="138px"
	>
	</TextView>
	<TextView
		android:id="@+id/isConnect"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:layout_x="150px"
		android:layout_y="137px"
	>
	</TextView>
	<Button
		android:id="@+id/setCmnetApn"
		android:layout_width="140px"
		android:layout_height="50px"
		android:text="设置apn为CMNET"
		android:layout_x="7px"
		android:layout_y="266px"
	>
	</Button>
	<Button
		android:id="@+id/checkConnect"
		android:layout_width="120px"
		android:layout_height="50px"
		android:text="检测网络连接"
		android:layout_x="180px"
		android:layout_y="266px"
	>
	</Button>
</AbsoluteLayout>
