<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"></ImageView>
		<Button android:id="@+id/button" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:text="Button"></Button>
		<TextView android:id="@+id/text" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_toRightOf="@id/button"
			android:text="Text Text"></TextView>
	</RelativeLayout>
</LinearLayout>
