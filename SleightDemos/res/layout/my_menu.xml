<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menu" android:visibility="gone" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@drawable/menuimg" android:paddingTop="2dip"
	android:paddingBottom="2dip">
	<Button android:id="@+id/ibtn_his" android:background="@drawable/menu_button"
		android:layout_width="0dip" android:layout_weight="0.25"
		android:layout_height="wrap_content" android:drawableTop="@drawable/tab_r2_c1"
		android:layout_margin="4dip" />
	<Button android:id="@+id/ibtn_pricemap" android:background="@drawable/menu_button"
		android:layout_width="0dip" android:layout_weight="0.25"
		android:layout_height="wrap_content" 
		android:drawableTop="@drawable/tab_r2_c2" 
		android:layout_margin="4dip" />
	<Button android:id="@+id/ibtn_sale" android:background="@drawable/menu_button"
		android:layout_width="0dip" android:layout_weight="0.25"
		android:layout_height="wrap_content"
		android:drawableTop="@drawable/tab_r2_c3" 
		android:layout_margin="4dip" />
	<Button android:id="@+id/ibtn_help" android:background="@drawable/menu_button"
		android:layout_width="0dip" android:layout_weight="0.25"
		android:layout_height="wrap_content" 
		android:drawableTop="@drawable/tab_r2_c4"
		android:layout_margin="4dip" />
</LinearLayout>
